@model WCRM.MODEL.AdminPanel.HeroSectionModel
@{
    ViewData["Title"] = "Edit Hero Section";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Hero Section</h2>

<!-- Edit Form -->
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="heroTabs">
                <li class="nav-item">
                    <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general">Hero Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="seo-tab" data-bs-toggle="tab" href="#seo">SEO Info</a>
                </li>
            </ul>

            <div class="tab-content mt-3">
                <!-- General Info Tab -->
                <div class="tab-pane fade show active" id="general">
                    <div class="row mb-3">
                        <label asp-for="Title" class="col-sm-3 col-form-label text-end"></label>
                        <div class="col-sm-9">
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Subtitle" class="col-sm-3 col-form-label text-end"></label>
                        <div class="col-sm-9">
                            <input asp-for="Subtitle" class="form-control" required />
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-3 col-form-label text-end"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="Description" class="form-control" id="descriptionEditor"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ButtonText" class="col-sm-3 col-form-label text-end"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="ButtonText" class="form-control" id="buttonEditor"></textarea>
                            <span asp-validation-for="ButtonText" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="BackgroundImage" class="col-sm-3 col-form-label text-end">Background Image</label>
                        <div class="col-sm-9">
                            <input type="file" asp-for="BackgroundImage" class="form-control" accept="image/*" />
                            <span asp-validation-for="BackgroundImage" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ButtonLink" class="col-sm-3 col-form-label text-end">Button Link</label>
                        <div class="col-sm-9">
                            <input asp-for="ButtonLink" class="form-control" type="text" required />
                            <span asp-validation-for="ButtonLink" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Status" class="col-sm-3 col-form-label text-end"></label>
                        <div class="col-sm-9">
                            <select asp-for="Status" class="form-control">
                                <option value="Published">Published</option>
                                <option value="Unpublished">Unpublished</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- SEO Info Tab -->
                <div class="tab-pane fade" id="seo">
                    <div class="row mb-3">
                        <label asp-for="SEO_Title" class="col-sm-4 col-form-label text-end text-nowrap">SEO Title</label>
                        <div class="col-sm-8">
                            <input asp-for="SEO_Title" class="form-control" placeholder="Enter SEO title" />
                            <span asp-validation-for="SEO_Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="SEO_Description" class="col-sm-4 col-form-label text-end text-nowrap">SEO Description</label>
                        <div class="col-sm-8">
                            <textarea asp-for="SEO_Description" class="form-control" placeholder="Enter SEO description"></textarea>
                            <span asp-validation-for="SEO_Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="SEO_Keywords" class="col-sm-4 col-form-label text-end text-nowrap">SEO Keywords</label>
                        <div class="col-sm-8">
                            <input asp-for="SEO_Keywords" class="form-control" placeholder="Enter SEO keywords (comma separated)" />
                            <span asp-validation-for="SEO_Keywords" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit & Cancel Buttons -->
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.25.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('descriptionEditor', {
            height: 200,
            extraPlugins: 'autogrow',
            autoGrow_minHeight: 150,
            autoGrow_maxHeight: 400,
            removePlugins: 'resize'
        });

        CKEDITOR.replace('buttonEditor', {
            height: 100,
            extraPlugins: 'autogrow',
            autoGrow_minHeight: 80,
            autoGrow_maxHeight: 200,
            removePlugins: 'resize'
        });
    </script>
}
