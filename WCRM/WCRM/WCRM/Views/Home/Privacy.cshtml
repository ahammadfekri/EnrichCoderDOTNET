@using WCRM.MODEL.AdminPanel
@using WCRM.ViewModel
@model HomeViewModel
@{
    ViewData["Title"] = "Weblink Communication Ltd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="privacy-container">
    <h1>Privacy Policy</h1>

    @if (Model.privacy != null && Model.privacy.Any())  // Check if the list is not empty
    {
        <p class="updated-date">Last updated: @Model.privacy.First().CreatedAt</p>

        @foreach (var privacy in Model.privacy)
        {
            <section>
                <h2>@privacy.Name</h2>
                <p>@privacy.Description</p>
            </section>
        }
    }
    else
    {
        <p>No privacy policy available.</p>
    }
</div>
    

