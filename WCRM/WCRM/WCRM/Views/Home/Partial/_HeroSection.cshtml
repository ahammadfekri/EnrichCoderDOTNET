<!-- Video Modal Start -->
<div class="modal modal-video fade" id="videoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Youtube Video</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 16:9 aspect ratio -->
                <div class="ratio ratio-16x9">
                    <iframe class="embed-responsive-item" src="" id="video" allowfullscreen allowscriptaccess="always" allow="autoplay"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Video Modal End -->


<!-- Service Start -->
<div class="container-xxl py-2">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="fs-5 fw-medium text-primary">Our Services</p>
            <h1 class="display-5 mb-5">Services that We Offer</h1>
        </div>
        <div class="row g-4">
            @foreach (var service in Model.Services)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item position-relative h-100">
                        <div class="service-text rounded p-5 bg-light shadow-lg h-100">
                            <div class="d-flex align-items-center mb-3">
                                <div class="me-3">
                                    <img src="@service.Icon" alt="@service.Name" style="width: 48px; height: 48px; filter: invert(1);">
                                </div>
                                <div class="flex-grow-1 d-flex justify-content-center">
                                    <h5 class="text-primary m-0">@service.Name</h5>
                                </div>
                            </div>
                            <p class="mb-0 text-secondary service-description">@service.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->


<!-- Product Start -->
<div class="container-xxl pt-5">
    <div class="container">
        <!-- <div class="text-center text-md-start pb-5 pb-md-0 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px; text-align: center;">
        <p class="fs-5 fw-medium text-primary">Our Products</p>
        <h1 class="display-5 mb-5">We've Done Lot's of Awesome Products</h1>
        </div> -->
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="fs-5 fw-medium text-primary">Our Products</p>
            <h1 class="display-5 mb-5">We've Done Lot's of Awesome Products</h1>
        </div>
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <div class="row g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-lg creative-card">
                            <div class="card-body d-flex flex-column p-4 position-relative overflow-hidden">

                                <div class="creative-bg-circle"></div>

                                <div class="mb-4 position-relative z-1">
                                    <h5 class="card-title mb-0 fw-bold creative-title">
                                        <span class="title-text">@product.Name</span>
                                        <span class="title-glow"></span>
                                        <span class="title-highlight"></span>
                                    </h5>
                                    <div class="title-flow-line mt-2"></div>
                                </div>

                                <div class="description-wrapper flex-grow-1 position-relative z-1">
                                    <p class="card-text creative-text">@product.Description</p>
                                    <div class="black-shade-effect"></div>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent border-0 pb-4 px-4 text-center">
                                <a href="#" class="btn btn-primary btn-creative w-50">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
    </div>
    <!-- Product End -->


    <!-- Quote Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <p class="fs-5 fw-medium text-primary">Get A Quote</p>
                    <h1 class="display-5 mb-4">Need Our Expert Help? We're Here!</h1>
                  @*   <p>{{ $websiteSettings->about_us }}</p> *@
                    <a class="d-inline-flex align-items-center rounded overflow-hidden border border-primary" href="">
                        <span class="btn-lg-square bg-primary" style="width: 55px; height: 55px;">
                            <i class="fa fa-phone-alt text-white"></i>
                        </span>
                        <span class="fs-5 fw-medium mx-4">phone</span>
                    </a>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <h2 class="mb-4">Get A Free Quote</h2>
                    <form method="post" action="#">
                        

                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" name="name" class="form-control" id="name" placeholder="Your Name">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" name="email" class="form-control" id="email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" name="phone" class="form-control" id="phone" placeholder="Your phone">
                                    <label for="phone">Your phone</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" name="subject" class="form-control" id="subject" placeholder="Subject">
                                    <label for="subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="message" class="form-control" placeholder="Leave a message here" id="message" style="height: 200px"></textarea>
                                    <label for="message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary rounded-pill py-3 px-5" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Quote Start -->


    <!-- Client Start -->
    <div class="container-xxl pt-5">
        <div class="container">
            <div class="text-center text-md-start pb-5 pb-md-0 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="fs-5 fw-medium text-primary">Our Valuable Clients</p>
            </div>
            <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var sliders in Model.sliders)
                {
                    <div class="testimonial-item rounded p-4 p-lg-4 mb-5">
                   
                        <img class="mb-3" src="@sliders.SliderImage" alt="">
                    <h5>@sliders.Title</h5>
                    </div>
              }
            </div>
        </div>
    </div>
    <!-- Client End -->


 