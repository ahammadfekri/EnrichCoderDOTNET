@model WCRM.MODEL.AdminPanel.Client
@{
    ViewData["Title"] = "Edit Client";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Client</h2>

<div class="card">
    <div class="card-body">
        <ul class="nav nav-tabs" id="portfolioTabs">
            <li class="nav-item">
                <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general">Client Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="seo-tab" data-bs-toggle="tab" href="#seo">SEO Info</a>
            </li>
        </ul>

        <!-- 🛠️ Wrap form outside the tabs to ensure all inputs are submitted -->
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="tab-content mt-3">
                <!-- General Info Tab -->
                <div class="tab-pane fade show active" id="general">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label text-end">Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label text-end">Description</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" id="editor"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ClientLogo" class="col-sm-2 col-form-label text-end">Client Image</label>
                        <div class="col-sm-10">
                            <input type="file" asp-for="ClientLogo" class="form-control" accept="image/*" />
                            <span asp-validation-for="ClientLogo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Status" class="col-sm-2 col-form-label text-end">Status</label>
                        <div class="col-sm-10">
                            <select asp-for="Status" class="form-control">
                                <option value="Published">Published</option>
                                <option value="Unpublished">Unpublished</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

               
                
            </div>

            <!-- Submit & Cancel Buttons (✅ Now aligned properly) -->
            <div class="row mt-4">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.25.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor', {
            height: 300,
            extraPlugins: 'autogrow',
            autoGrow_minHeight: 200,
            autoGrow_maxHeight: 600,
            removePlugins: 'resize'
        });
    </script>
}
