<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <!-- azia CSS -->
    <link rel="stylesheet" href="~/assets/css/azia.css">
    <script src="~/assets/lib/jquery/jquery.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
</head>
<body>
   @*  @await Html.PartialAsync("~/Views/Home/Partial/_navbar.cshtml") *@

    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-light" id="sidebar-wrapper">
            <div class="list-group-item list-group-item-action">Admin Panel</div>
            <br />

            <div class="list-group list-group-flush">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Portfolio" asp-action="Index">Manage Portfolio</a>
                </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Contact" asp-action="Index">Manage Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Industry" asp-action="Index">Manage Industry</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Service" asp-action="Index">Manage Service</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Slider" asp-action="Index">Manage Slider</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Company" asp-action="Index">Manage Company</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Privacy" asp-action="Index">Manage Privacy</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="WebsiteConfig" asp-action="Index">Manage Site Settings</a>
                    </li>
                </ul>
               @*  <a href="/Settings" class="list-group-item list-group-item-action">Site Settings</a> *@
                <a href="/Account/Logout" class="list-group-item list-group-item-action text-danger">Logout</a>
            </div>
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper">            
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function() {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
