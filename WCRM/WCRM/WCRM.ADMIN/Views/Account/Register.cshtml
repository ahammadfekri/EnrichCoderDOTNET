@model WCRM.MODEL.AdminPanel.UserModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" style="width: 500px;" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" style="width: 500px;" class="form-control" />
        <span asp-validation-for="FullName" style="width: 500px;" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" style="width: 500px;" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Register</button>
</form>
