@using WCRM.MODEL.AdminPanel
@model List<WebsiteConfig>

@{
    ViewData["Title"] = "Website Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Website Config Management</h2>
@* <a asp-action="Create" class="btn btn-success">Add New Service</a> *@

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Logo</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
           @*  <th>About Us</th> *@
            <th>Created At</th>
            <th>Facebook</th>
            <th>Twitter</th>
            <th>LinkedIn</th>
            <th>YouTube</th>
            <th>Instagram</th>
            @* <th>Telegram</th> *@
            <th>WhatsApp</th>
           @*  <th>WeChat</th> *@
            <th>Skype</th>
@*             <th>Snapchat</th>
            <th>TikTok</th>
            <th>Pinterest</th>
            <th>Reddit</th>
            <th>Vimeo</th>
            <th>Quora</th>
            <th>MySpace</th> *@
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Logo))
                    {
                        <img src="@item.Logo" alt="Logo" width="50" />
                    }
                </td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
               @*  <td>@Html.Raw(item.Description)</td> *@ <!-- Ensure this is sanitized -->
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td><a href="@item.Facebook" target="_blank">Facebook</a></td>
                <td><a href="@item.Twitter" target="_blank">Twitter</a></td>
                <td><a href="@item.LinkedIn" target="_blank">LinkedIn</a></td>
                <td><a href="@item.YouTube" target="_blank">YouTube</a></td>
                <td><a href="@item.Instagram" target="_blank">Instagram</a></td>
               @*  <td><a href="@item.Telegram" target="_blank">Telegram</a></td> *@
                <td><a href="@item.WhatsApp" target="_blank">WhatsApp</a></td>
               @*  <td><a href="@item.WeChat" target="_blank">WeChat</a></td> *@
                <td><a href="@item.Skype" target="_blank">Skype</a></td>
                @* <td><a href="@item.Snapchat" target="_blank">Snapchat</a></td>
                 <td><a href="@item.TikTok" target="_blank">TikTok</a></td>
                <td><a href="@item.Pinterest" target="_blank">Pinterest</a></td>
                <td><a href="@item.Reddit" target="_blank">Reddit</a></td>
                <td><a href="@item.Vimeo" target="_blank">Vimeo</a></td>
                <td><a href="@item.Quora" target="_blank">Quora</a></td>
                <td><a href="@item.MySpace" target="_blank">MySpace</a></td> *@
                <td>
                    <span class="badge @(item.Status == "Published" ? "bg-success" : "bg-warning")">
                        @item.Status
                    </span>
                </td>
              
                <td class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
